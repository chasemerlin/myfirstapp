<p id="notice"><%= notice %></p>

<h1>Monthly We</h1>

<% @posts.each do |post| %>
  <div class="post well">
    <p class="post-content"><%= post.content %></p>
    <p class="post-votes"><%= post.votes_count %></p>
    <p class="post-user"><%= post.user_id %></p>
    <p class="post-date"><%= time_ago_in_words(post.created_at) %> ago</p>
  </div>
  <% post.child_posts.each do |comment| %>
    <div class="post well">
      <p class="post-content"><%= comment.content %></p>
      <p class="post-votes"><%= comment.votes_count %></p>
      <p class="post-user"><%= comment.user_id %></p>
      <p class="post-date"><%= time_ago_in_words(comment.created_at) %> ago</p>
    </div>
  <% end %>
<% end %>

<%= link_to 'New Post', new_post_path %>
